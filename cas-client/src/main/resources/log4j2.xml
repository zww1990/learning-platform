<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}][%t][%p][%c{1}:%L] - %m%n" />
		</Console>
		<Async name="Async">
			<AppenderRef ref="Console" />
		</Async>
	</Appenders>
	<Loggers>
		<Root level="debug">
			<AppenderRef ref="Async" />
		</Root>
	</Loggers>
</Configuration>
